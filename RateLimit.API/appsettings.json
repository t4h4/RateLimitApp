{
  "IpRateLimitPolicies": { // policies içindeki kurallar diðer kurallarý ezer. ama daha dar olanlarý deðil aynýysa ezer. 
    "IpRules": [ //birden fazla ip'ye kural tanýmlayabilirim. bu sebeple paratezle giriyoruz.

      {
        "Ip": "::1", //w10 ipv6 localhost
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "30s",
            "Limit": 7
          }

        ]
      }

    ]
  },
   // birden fazla uygulama varsa docker 'da root balance ip adresi için RealIpHeader kural tagi kullanýlabilir.
  "IpRateLimiting": {
    "QuotaExceededResponse": {
      "Content": "{{ \"mesaj\":\"Ýstek limiti aþýldý. \", \"Detay\": \"Ýzin verilen istek sayýsý {1}'de {0} istektir. {2} saniye sonra tekra deneyiniz  \"  }}", //{1} = period {0} = limit {2} parametresi ise kaç saniye sonra istek yapýlabileceðini belirtmektedir. 
      "ContentType": "application/json"
    },
    "EnableEndpointRateLimiting": true, // Endpointlere limit uygulama özelliði aktif
    "StackBlockedRequests": false, // limit aþýldýktan sonra deðerlerin sayýlma özelliði pasif
    "HttpStatusCode": 429, // baþarýsýz durum oldugunda client'lara 429 dön. 429 too many request anlamýna gelir.
    "IpWhitelist": [ "127.0.0.1" ], // [ "127.0.0.1", "::1" ] olsaydý beyaz listede olurduk. ipv6 ya göre hareket ediyor vs2019
    "EndpointWhiteList": [ "put:/api/product" ], //muaf tut.
    "GeneralRules": [
      {
        "Endpoint": "*:/api/product", //* ile get, put, delete gibi herhangi bir http method tipi olabilir demek.
        "Period": "20s",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/product", // "GET:/api/product" sadece get için diyebilirdik.
        "Period": "1h",
        "Limit": 100
      },
      {
        "Endpoint": "*:/api/categories", // categories/* dersek categories aþaðýsýndaki tüm action metodlar dahil edilmiþ olur.
        "Period": "30s",
        "Limit": 8
      },
      {
        "Endpoint": "*:/api/categories",
        "Period": "1d",
        "Limit": 500
      }
    ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
{
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true, // Endpointlere limit uygulama özelliði aktif
    "StackBlockedRequests": false, // limit aþýldýktan sonra deðerlerin sayýlma özelliði pasif
    "HttpStatusCode": 429, // baþarýsýz durum oldugunda client'lara 429 dön. 429 too many request anlamýna gelir.
    "IpWhitelist": [ "127.0.0.1" ], // [ "127.0.0.1", "::1" ] olsaydý beyaz listede olurduk. ipv6 ya göre hareket ediyor vs2019
    "GeneralRules": [
      {
        "Endpoint": "*", //tüm endpointler
        "Period": "5s",
        "Limit": 3
      }
    ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}